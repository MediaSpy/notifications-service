    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.170",
    "@types/multer": "^1.4.7",
    "@types/node": "^14.14.6",
    "@types/sinon": "^10.0.2",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
